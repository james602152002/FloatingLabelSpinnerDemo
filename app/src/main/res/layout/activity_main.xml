<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    tools:context="com.james602152002.floatinglabelspinnerdemo.MainActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="50dp">

            <com.james602152002.floatinglabelspinner.FloatingLabelSpinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:j_fls_recursive="true"
                app:j_fls_textColorHint="@android:color/holo_orange_light" />

            <View
                android:id="@+id/divider_1"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_marginBottom="25dp"
                android:layout_marginTop="30dp"
                android:background="@android:color/holo_blue_light" />

            <View
                android:id="@+id/divider_2"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_marginBottom="25dp"
                android:layout_marginTop="25dp"
                android:background="@android:color/holo_blue_light" />

            <View
                android:id="@+id/divider_3"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_marginBottom="25dp"
                android:layout_marginTop="25dp"
                android:background="@android:color/holo_blue_light" />

            <Button
                android:id="@+id/submit"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="50dp"
                android:background="@android:color/holo_blue_light"
                android:padding="0px"
                android:text="@string/submit_error"
                android:textColor="@android:color/white" />

        </LinearLayout>
    </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>
